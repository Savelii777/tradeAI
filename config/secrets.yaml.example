# AI Trading Bot - Secrets Configuration Template
# Version 2.0
# 
# IMPORTANT: Copy this file to secrets.yaml and fill in your actual credentials
# NEVER commit secrets.yaml to version control!

# MEXC Futures API (for live trading)
# Get your API keys from: https://www.mexc.com/user/openapi
mexc:
  api_key: "your_mexc_api_key"
  api_secret: "your_mexc_api_secret"
  # Note: Enable Futures trading permission, do NOT enable withdrawal!

# Binance API - NOT REQUIRED for live trading!
# The bot fetches public OHLCV data from Binance without authentication.
# These fields are only here for future features that might need private access.
# You can leave these as-is or remove this section entirely.
binance:
  api_key: ""  # Not used - public data works without keys
  api_secret: ""  # Not used - public data works without keys

# Legacy exchange config (for backward compatibility)
exchange:
  api_key: "your_api_key_here"
  api_secret: "your_api_secret_here"
  # Note: Do NOT use withdrawal-enabled API keys!

database:
  username: "your_db_username"
  password: "your_db_password"

redis:
  password: "your_redis_password"  # Leave empty if no password

notifications:
  telegram:
    bot_token: "your_telegram_bot_token"
    chat_id: "your_telegram_chat_id"
  
  email:
    username: "your_email_username"
    password: "your_email_password"
